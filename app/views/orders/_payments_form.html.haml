= form_for [@order, Payment.new(:amount => @order.balance)] do |f|
  %dl.text
    %dt= f.label :method, t('shop.orders.method')
    %dd= f.text_field :method, :class => 'text'
  %dl.text
    %dt= f.label :reference, t('shop.orders.reference')
    %dd= f.text_field :reference, :class => 'text'
  %dl.amount
    %dt= f.label :amount, t('shop.orders.amount')
    %dd
      .moneyInput
        .currency= t('shop.settings.defaults.currency_unit').html_safe
        = f.text_field :amount, :class => 'text'
  %dl.submit
    %dd= f.submit t('shop.orders.add_payment') , :class => 'button green'
