= simple_form_for @country do |f|
  = render 'shared/error_messages', object: f.object
  = field_set_tag t('shop.countries.country_details') do

    .splitContainer
      %dl.third
        %dt= f.label :name, t('shop.countries.name')
        %dd= f.text_field :name, class: 'focus text', :required => true
      %dl.third
        %dt= f.label :code2, t('shop.countries.iso_alpha_2')
        %dd= f.text_field :code2, class: 'text'
      %dl.third
        %dt= f.label :code3, t('shop.countries.iso_alpha_3')
        %dd= f.text_field :code3, class: 'text'

    .splitContainer
      %dl.third
        %dt= f.label :continent, t('shop.countries.continent')
        %dd= f.text_field :continent, class: 'text'
      %dl.third
        %dt= f.label :tld, t('shop.countries.tld')
        %dd= f.text_field :tld, class: 'text'
      %dl.third
        %dt= f.label :eu_member, t('shop.countries.eu_member')
        %dd.checkbox
          = f.check_box :eu_member
          = f.label :eu_member, t('shop.countries.is_eu_member')

  %p.submit
    - unless @country.new_record?
      %span.right
        = link_to t('shop.delete'), @country, class: 'button purple',
          method: :delete, data: { confirm: t('shop.countries.delete_confirmation') }
    = f.submit t('shop.submit'), class: 'button green'
    = link_to t('shop.cancel'), :countries, class: 'button'
