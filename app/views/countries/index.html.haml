- @page_title = t('shop.countries.countries')

= content_for :header do
  %p.buttons= link_to t('shop.countries.new_country'), :new_country, class: 'button green'
  %h2.countries= t('shop.countries.countries')

.table
  %table.data
    %thead
      %tr
        %th= t('shop.countries.name')
        %th= t('shop.countries.iso_alpha_2')
        %th= t('shop.countries.iso_alpha_3')
        %th= t('shop.countries.continent')
        %th= t('shop.countries.tld')
        %th= t('shop.countries.eu?')
    %tbody
      - @countries.each do |country|
        %tr
          %td= link_to country.name, edit_country_path(country)
          %td= country.code2
          %td= country.code3
          %td= country.continent
          %td= country.tld
          %td= boolean_tag country.eu_member?
