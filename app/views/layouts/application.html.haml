!!!
%html
  %head
    %title #{@page_title} - Shop
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %nav.sidebar
      %header.logo
        %h1= link_to "Online Shop", root_path
        %p Online Shop

      %ul
        %li= link_to 'Products', products_path
        %li= link_to 'Product Categories', product_categories_path
        %li= link_to 'Delivery Services', delivery_services_path
        %li= link_to 'Tax Rates', tax_rates_path
        %li= link_to 'Countries', countries_path
        %li= link_to 'Customers', customers_path
        %li= link_to 'Orders', orders_path
        %li= link_to 'Users', users_path
        %li= link_to t('.logout'), [:logout], :method => :delete

    %header.main
      = yield :header

    #content
      = display_flash.html_safe
      %section.main
        = yield

    %footer
      %p.store= link_to "&larr; #{t('.goto')}".html_safe, '/'

